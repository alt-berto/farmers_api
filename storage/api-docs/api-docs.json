        "/api/login": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "User Login",
                "operationId": "login",
                "parameters": [
                    {
                        "name": "username",
                        "in": "query",
                        "description": "Write your username",
                        "required": true,
                        "style": "form",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Write your password",
                        "required": true,
                        "style": "form",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User Login",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserSchema"
                                },
                                "example": {
                                    "token": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.eyJpc3MiOiJodHRwOi8vbG9jYWxob3N0OjgwODAvbG9naW4iLCJpYXQiOjE1NzkxMzQzMTIsImV4cCI6MTU3OTEzNzkxMiwibmJmIjoxNTc5MTM0MzEyLCJqdGkiOiJaWWhaWnZVd1lBVE9lbDlwIiwic3ViIjoyLCJwcnYiOiIyM2JkNWM4OTQ5ZjYwMGFkYjM5ZTcwMWM0MDA4NzJkYjdhNTk3NmY3In0.wU3zGJO1SPWwtwDeRA4amxtkDxySnGdAq301ARSoVQs"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Error: Bad request. When required parameters were not supplied."
                    }
                }
            }
        },
        "/api/me": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get User Data",
                "operationId": "me",
                "responses": {
                    "200": {
                        "description": "Get User Data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserSchema"
                                },
                                "example": {
                                    "response": {
                                        "data": {
                                            "id": "1",
                                            "name": "Alberto Molina",
                                            "username": "nmolina",
                                            "email": "mail@mail.com",
                                            "address": "San Jose",
                                            "phone": "72906930",
                                            "legal_id": "155829822903",
                                            "occupation": "Developer",
                                            "is_active": "1",
                                            "activation_code": "",
                                            "is_admin": "0",
                                            "last_login": "0000-00-00 00:00:00",
                                            "status": "1",
                                            "usrtype_id": "5",
                                            "change_pass": "1",
                                            "created_at": "0000-00-00 00:00:00",
                                            "updated_at": "0000-00-00 00:00:00"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Error: Bad request. When required parameters were not supplied."
                    },
                    "401": {
                        "description": "Check Token"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Close Session",
                "operationId": "logout",
                "responses": {
                    "200": {
                        "description": "Close Session",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserSchema"
                                },
